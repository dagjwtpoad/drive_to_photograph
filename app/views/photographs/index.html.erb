<main class="main">
  <div class="inner">

    <% if user_signed_in? %>
      <div class="greeting">
        <%= "ようこそ、" %>
        <%= link_to "Mr.#{current_user.nickname}", user_path(current_user), class: :greeting__link %>
      </div>
      <div class = search>
      <%= form_with(url: search_photographs_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
      </div>
    <div class="card__wrapper">
      <%= render partial: 'photograph', collection: @photographs %>
    </div>
    <% else %>
      <div class="car_image">
        <%= image_tag "s-879724908.png", class:"car_image_back" %>
          <div class="top_title">
            <h1>ようこそ !</h1>
            <h1>Drive to Photograph へ</h1>
              <div class="top_title_sub">
                貴方の愛車と風景をともに楽しんでいきましょう！
              </div>
          </div>
      </div>
    <% end %>
  </div>
</main>
